<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="LoopView">
        <attr name="lineColor" format="color"/>
        <attr name="topBottomTextColor" format="color"/>
        <attr name="centerTextColor" format="color"/>
        <attr name="textSize" format="dimension"/>
        <attr name="canLoop" format="boolean"/>
        <attr name="initPosition" format="integer"/>
        <attr name="drawItemCount" format="integer"/>
    </declare-styleable>

    <!--侧边字母索引-->
    <declare-styleable name="SideBar">
        <attr name="bgColor" format="color"/>
        <attr name="txColor" format="color"/>
        <attr name="txSize" format="dimension"/>
        <attr name="textChooesColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="CustomClipTabView">
        <attr name="bgSrc" format="reference"/>
    </declare-styleable>


    <!-- 验证码 -->
    <declare-styleable name="VerificationEditText">
        <attr name="codeTextSize" format="dimension"/>
        <attr name="codeTextColor" format="color"/>
        <attr name="codeLength" format="integer"/>
    </declare-styleable>

    <!-- 曲线 -->
    <declare-styleable name="QulineView">
        <attr name="line_Width" format="dimension"/>
        <attr name="line_Color" format="color"/>

        <attr name="xyLineWidth" format="dimension"/>
        <attr name="xyLineColor" format="color"/>

        <attr name="text_size" format="dimension"/>
        <attr name="text_color" format="color"/>

        <attr name="pointSize" format="dimension"/>
        <attr name="pointColor" format="color"/>

        <attr name="transitionStartColor" format="color"/>
        <attr name="transitionEndColor" format="color"/>

        <attr name="showPoint" format="boolean"/>

        <attr name="lineType" format="enum">
            <enum name="curve" value="1"/>
            <enum name="polyline" value="2"/>
        </attr>
    </declare-styleable>


    <!-- 会计云曲线 -->
    <declare-styleable name="MyQulineView">
        <attr name="Myline_Width" format="dimension"/>
        <attr name="Myline_Color" format="color"/>

        <attr name="MyxyLineWidth" format="dimension"/>
        <attr name="MyxyLineColor" format="color"/>

        <attr name="Mytext_size" format="dimension"/>
        <attr name="Mytext_color" format="color"/>

        <attr name="MypointSize" format="dimension"/>
        <attr name="MypointColor" format="color"/>

        <attr name="MytransitionStartColor" format="color"/>
        <attr name="MytransitionEndColor" format="color"/>

        <attr name="MyshowPoint" format="boolean"/>

        <attr name="QLineDistanceLRSideWidth" format="dimension"/>
        <attr name="LineDistanceBottomTextSize" format="dimension"/>
        <attr name="TextDistanceBottomLineSize" format="dimension"/>

        <attr name="MylineType" format="enum">
            <enum name="Mycurve" value="1"/>
            <enum name="Mypolyline" value="2"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="ScrollTabsLayout">
        <attr name="columns" format="integer"/>
        <attr name="rows" format="integer"/>
        <attr name="lineHeight" format="dimension"/>
    </declare-styleable>
</resources>