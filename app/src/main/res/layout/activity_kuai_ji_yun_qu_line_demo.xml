<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="#ff8d34"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.dongao.mydemoapp.KuaiJiYunQuLineDemoActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffc5a6"
            android:textSize="12sp"
            android:text="总时长: "
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:text="300"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:text="Min"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ffc5a6"
        android:layout_marginTop="5dp"
        />

    <com.example.dongao.mydemoapp.widget.MyQulineView
        android:id="@+id/qulineView"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        app:MytransitionStartColor="#6cffffff"
        app:MytransitionEndColor="#00ffffff"
        />
</LinearLayout>
